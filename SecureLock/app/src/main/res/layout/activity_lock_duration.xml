<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/space_background"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="@null"
            android:tint="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Immediate Lock"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"/>
    </LinearLayout>

    <!-- Lock Duration Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lock Duration"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/durationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minutes: 5"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/durationSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:progress="5"
        android:progressTint="@color/blue_accent"
        android:thumbTint="@color/blue_accent"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/duration5m"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="5M"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/duration_button_selected"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/duration10m"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="10M"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/duration_button_background"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/duration15m"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="15M"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/duration_button_background"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/duration30m"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="30M"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/duration_button_background"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Start Lock Button -->
    <Button
        android:id="@+id/startLockButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="START LOCK"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/save_button_background"
        android:drawableStart="@drawable/ic_check"
        android:drawablePadding="8dp"
        android:gravity="center"/>

</LinearLayout> 